<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/bookDetailLeft"
                android:text="馆藏地:" />

            <TextView
                android:id="@+id/tvstorePlace"
                style="@style/bookDetailRight"
                android:text="2012" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/bookDetailLeft"
                android:text="索取号:" />

            <TextView
                android:id="@+id/tvgetNum"
                style="@style/bookDetailRight"
                android:text="2012" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/bookDetailLeft"
                android:text="状态:" />

            <TextView
                android:id="@+id/tvstate"
                style="@style/bookDetailRight"
                android:text="2012" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/bookDetailLeft"
                android:text="借阅类型:" />

            <TextView
                android:id="@+id/tvbookType"
                style="@style/bookDetailRight"
                android:text="2012" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/bookDetailLeft"
                android:text="登录号:" />

            <TextView
                android:id="@+id/tvloginNum"
                style="@style/bookDetailRight"
                android:text="2012" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/bookDetailLeft"
                android:text="年代:" />

            <TextView
                android:id="@+id/tvyear"
                style="@style/bookDetailRight"
                android:text="2012" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/bookDetailLeft"
                android:text="卷期:" />

            <TextView
                android:id="@+id/tvvolumnTime"
                style="@style/bookDetailRight"
                android:text="2012" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:orientation="horizontal" >

            <TextView
                style="@style/bookDetailLeft"
                android:text="校区:" />

            <TextView
                android:id="@+id/tvStoreCampus"
                style="@style/bookDetailRight"
                android:text="2012" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>